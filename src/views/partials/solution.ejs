<style>
    /* Container chính căn giữa */
    .video-container {
        margin: 30px 0;
        display: flex;
        justify-content: center;
        margin-bottom: 25px;
    }

    /* Wrapper gradient + responsive */
    .video-wrapper {
        position: relative;
        height: 250px;
        width: 100%;
        padding: 5px;
        border-radius: 1rem; /* rounded-2xl */
        background: linear-gradient(90deg, #08e9fc, #0464d5, #564cdd);
        display: inline-block;
        min-height: auto;
        animation: gradientAnimation 5s ease infinite;
    }

    @media (min-width: 1024px) {
        .video-wrapper {
            min-height: 690px;
            /* width: 100%;  */
        }
    }

    /* Inner video container */
    .video-inner {
        position: relative;
        border-radius: 14px;
        background-color: #fff;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 10;
    }

    /* Video element */
    .video-element {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 14px;
    }

    /* Play overlay */
    .play-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        cursor: pointer;
    }

    /* Play button pulse */
    .play-button {
        background-color: #fff;
        border-radius: 50%;
        width: 68px; /* w-17 h-17 ≈ 68px */
        height: 68px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        animation: pulse 1.5s infinite;
        transition: transform 0.3s ease;
    }

    .play-button:hover {
        transform: scale(1.1);
    }

    /* Icon play */
    .play-button i {
        color: #579fc9;
        font-size: 1.875rem; /* text-3xl ≈ 30px */
    }

    /* Pulse animation */
    @keyframes pulse {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.7;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* Gradient animation giống animate-gradient Tailwind */
    @keyframes gradientAnimation {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    .video-wrapper {
        background-size: 200% 200%;
    }
</style>

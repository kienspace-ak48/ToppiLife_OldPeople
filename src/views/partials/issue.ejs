<style>

/* RESPONSIVE */
@media (max-width: 1200px) {
    .issue .issue-list {
        grid-template-columns: 1fr;
    }
    .issue .issue-card {
        width: 90%;
        max-width: 572px;
    }
}
</style>

<div class="issue">
  <div class="main-content">
    <h2 class="title"><%=ps.issue.title%></h2>
    <div class="issue-list">
      <div class="issue-card">
        <img src="<%= ps?.issue?.images[0]?.file ? ('/uploads/'+ps.issue.images[0].file) : '/img/default.png' %>" loading="lazy" alt="">
        <h3 class="desc"><%=ps.issue.images[0].desc%></h3>
      </div>
      <div class="issue-card">
        <img src="<%= ps?.issue?.images[1]?.file ? ('/uploads/'+ps.issue.images[1].file) : '/img/default.png' %>" loading="lazy" alt="">
        <h3 class="desc"><%=ps.issue.images[1].desc%></h3>
      </div>
      <div class="issue-card">
        <img src="<%= ps?.issue?.images[2]?.file ? ('/uploads/'+ps.issue.images[2].file) : '/img/default.png' %>" loading="lazy" alt="">
        <h3 class="desc"><%=ps.issue.images[2].desc%></h3>
      </div>
      <div class="issue-card">
        <img src="<%= ps?.issue?.images[3]?.file ? ('/uploads/'+ps.issue.images[3].file) : '/img/default.png' %>" loading="lazy" alt="">
        <h3 class="desc"><%=ps.issue.images[3].desc%></h3>
      </div>
    </div>

    <div class="issue-summary">
      <p class="desc">
        <%=ps.issue.summary%>
      </p>
    </div>
  </div>
</div>
